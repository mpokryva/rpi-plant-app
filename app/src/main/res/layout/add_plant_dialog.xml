<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <TextView
        android:text="@string/add_plant"
        style="@style/DialogHeader_HoloBlueLight"/>
    <View
        style="@style/DialogDivider"/>
    <EditText
        android:id="@+id/plant_name_edit"
        android:inputType="textCapSentences"
        android:hint="@string/plant_name"
        style="@style/StandardEditText"/>
    <EditText
        android:id="@+id/plant_species_edit"
        android:inputType="textCapSentences"
        android:hint="@string/plant_species"
        style="@style/StandardEditText"/>
    <EditText
        android:id="@+id/optimal_temp_edit"
        android:inputType="number"
        android:hint="@string/optimal_temp"
        style="@style/StandardEditText"/>
    <EditText
        android:id="@+id/optimal_moisture_edit"
        android:inputType="number"
        android:hint="@string/optimal_moisture"
        style="@style/StandardEditText"/>
    <EditText
        android:id="@+id/optimal_light_edit"
        android:inputType="number"
        android:hint="@string/optimal_light"
        style="@style/StandardEditText"/>

</LinearLayout>